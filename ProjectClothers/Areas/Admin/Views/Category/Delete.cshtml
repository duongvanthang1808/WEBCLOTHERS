@model ProjectClothers.Models.Entities.ProductCategory

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">


                        <h3>Are you sure you want to delete this?</h3>



                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Name)
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.CreatedDate)
                            @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.CreatedBy)
                            @Html.TextBoxFor(model => model.CreatedBy, new { @class = "form-control" })
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <p>
                                
                               <button type="submit" class="btn btn-primary">Delete</button> |
                                @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-link" })
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

