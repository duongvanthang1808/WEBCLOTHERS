@model PagedList.IPagedList<ProjectClothers.Models.Entities.Product>

@using PagedList.Mvc

<div class="men">
    <!-- container -->
    <div class="container">
        <div class="col-md-9 fashions">
            <div class="title">
                <h3>TOPS - TITLE</h3>
            </div>
            <div class="fashion-section">
                <div class="fashion-grid1">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3 fashion-grid">
                            <a href="single.html">
                                <img src="~/Content/client/images/@item.Image" alt="" />
                                <div class="product">
                                    <h3>@item.Name</h3>
                                    <p><span></span> @item.Price &euro;</p>
                                </div>
                            </a>
                            <div class="fashion-view">
                                <span></span>
                                <div class="clearfix"></div>
                                <h4>
                                    <a href="/detail-@item.ID-@item.Name">Quick View</a>

                                </h4>
                            </div>
                        </div>
                        
                    }
                    <div class="clearfix"></div>
                </div>

                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
        <div class="col-md-3 side-bar">
            <div class="categories">
                <h3>CATEGORIES</h3>
                <ul>
                    @Html.Action("_NavigationCategory", "Men")
                </ul>
            </div>
            <div class="sales">
                <h3>SALE</h3>
                <div class="pricing">
                    <h4>Price range</h4>
                    <input type="text" placeholder="price from" required />
                    <input type="text" placeholder="price to" required />
                    <div class="clearfix"></div>
                </div>
                <div class="size">
                    <h4>Size</h4>
                    <ul>
                        <li><a href="#">XS</a></li>
                        <li><a href="#">S</a></li>
                        <li><a href="#">M</a></li>
                        <li><a href="#">L</a></li>
                        <li><a href="#">XL</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="clearfix"> </div>
    </div>
    <!-- //container -->
</div>